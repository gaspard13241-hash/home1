game.mixed_data = [...game.sport_data, ...game.celebrities_data];

let data = [];
let score = 0;
let A, B;

const area = document.getElementById("gameArea");

function init() {
  area.innerHTML = `
    <p>Do you want to play Higher or Lower?</p>
    <button onclick="chooseMode()">Yes</button>
    <button onclick="area.innerHTML='<p>ğŸ‘‹ Thanks for visiting!</p>';">No</button>
  `;
}

function chooseMode() {
  area.innerHTML = `
    <p>Choose your game mode:</p>
    <button onclick="setMode('sports')">ğŸ† Sports</button>
    <button onclick="setMode('celebs')">ğŸ¤ Celebrities</button>
    <button onclick="setMode('mixed')">ğŸŒ Mixed</button>
  `;
}

function setMode(mode) {
  if (mode === "sports") data = game.sport_data;
  else if (mode === "celebs") data = game.celebrities_data;
  else data = game.mixed_data;

  score = 0;
  A = randomPick();
  nextRound();
}

function randomPick() {
  return data[Math.floor(Math.random() * data.length)];
}

function nextRound() {
  B = randomPick();
  while (A.name === B.name) B = randomPick();
  showCards();
}

function showCards() {
  area.innerHTML = `
    <p>Current Score: <strong>${score}</strong></p>
    <div class="cards-flex">
      <div class="card">
        <h3>A: ${A.name}</h3>
        <img src="${A.image}" alt="${A.name}">
        <p>${A.description}</p>
        <p><em>${A.country}</em></p>
      </div>
      <div class="vs">VS</div>
      <div class="card">
        <h3>B: ${B.name}</h3>
        <img src="${B.image}" alt="${B.name}">
        <p>${B.description}</p>
        <p><em>${B.country}</em></p>
      </div>
    </div>
    <p>Who has more followers?</p>
    <button onclick="makeChoice('A')">A</button>
    <button onclick="makeChoice('B')">B</button>
  `;
}

function makeChoice(choice) {
  const correct = A.followers > B.followers ? 'A' : 'B';
  if (choice === correct) {
    score++;
    A = B;
    nextRound();
  } else {
    area.innerHTML = `
      <h2>âŒ Wrong!</h2>
      <p>Final Score: ${score}</p>
      <button onclick="init()">Play Again</button>
    `;
  }
}

init();
